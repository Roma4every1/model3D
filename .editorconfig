root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# JetBrains IDE extensions
ij_typescript_use_public_modifier = true
ij_css_hex_color_lower_case = true
ij_css_hex_color_long_format = true
ij_scss_hex_color_lower_case = true
ij_scss_hex_color_long_format = true

# Windows scripts
[**.{bat,ps1}]
end_of_line = crlf
